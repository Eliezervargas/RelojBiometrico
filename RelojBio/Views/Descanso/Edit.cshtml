@model RelojBio.ViewModel.DescansoViewModel

@{
    ViewBag.Title = "Modificar";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">

                <ul class="breadcrumb">
                    <li><i class="icon-home2 position-left"></i><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                    <li><a href="@Url.Action("Index", "Descanso")">Descansos</a></li>
                    <li class="active">Modificar Descanso</li>
                </ul>
            </div>

        </div>

        <div class="clearfix"></div>

        @using (Html.BeginForm("Edit", "Descanso"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="hidden">
                @Html.EditorFor(model => model.BreakID, new { htmlAttributes = new { @class = "form-control" } })
            </div>


            <div class="row">
                <br />
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>General</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>

                        <div class="x_content">

                            <div class="row">
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12" })
                                </div>
                                <div class="col-md-8 col-sm-8 col-xs-8">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 1100px; text-transform: uppercase" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                                <br />

                            </div>

                            <div class="row">
                                <br />
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    @Html.LabelFor(model => model.Start, htmlAttributes: new { @class = "control-label col-md-12" })
                                </div>
                                <div class="col-md-8 col-sm-8 col-xs-8">
                                    <input type="time" name="Start" id="Start" value="@Model.Start">
                                    @Html.ValidationMessageFor(model => model.Start, "", new { @class = "text-danger" })
                                </div>
                                <br />
                            </div>

                            <div class="row">
                                <br />
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    @Html.LabelFor(model => model.End, htmlAttributes: new { @class = "control-label col-md-12" })
                                </div>
                                <div class="col-md-8 col-sm-8 col-xs-8">
                                    <input type="time" name="End" id="End" value="@Model.End">
                                    @Html.ValidationMessageFor(model => model.End, "", new { @class = "text-danger" })
                                </div>
                                <br />
                            </div>

                            <div class="row">
                                <br />
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    @Html.LabelFor(model => model.DeductMinute, htmlAttributes: new { @class = "control-label col-md-12" })
                                </div>
                                <div class="col-md-8 col-sm-8 col-xs-8">
                                    @Html.EditorFor(model => model.DeductMinute, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 1100px; text-transform: uppercase" } })
                                    @Html.ValidationMessageFor(model => model.DeductMinute, "", new { @class = "text-danger" })
                                </div>
                                <br />
                            </div>

                            <div class="row">
                                <br />
                                <div class="col-md-8 col-sm-8 col-xs-8">
                                    @if (Model.Tipo == 1)
                                    {
                                        <input type="radio" name="Tipo" id="Tipo" value="1"><strong>Pagado</strong>
                                        <br>
                                    }
                                    else if (Model.Tipo == 2)
                                    {
                                        <input type="radio" name="Tipo" id="Tipo" value="2"><strong>Descontar</strong>
                                        <br>
                                    }
                                    else
                                    {
                                        <input type="radio" name="Tipo" id="Tipo" value="3"><strong>Debe Checar</strong>
                                        <br>
                                    }
                                </div>
                                <br />
                            </div>


                            <div class="form-group">
                                <br />

                                <div class="col-md-offset-2 col-md-10">
                                    <a class="btn btn-default" href="@Url.Action("Index", "Descanso")"> <span class="fa fa-mail-reply-all"></span> Regresar</a>
                                    <button type="submit" class="btn btn-primary">
                                        <span class="glyphicon glyphicon-plus"></span> Guardar
                                    </button>
                                </div>
                                <br />
                            </div>

                        </div>

                        <br />
                    </div>
                    <br />

                </div>
                <br />
            </div>

        }



    </div>

</div>